---
import Layout from '@/layouts/Layout.astro';
import { t } from '@/i18n';

const locale = 'en';
---

<Layout locale={locale} title={t(locale, 'about.title')}>
  <section class="max-w-4xl mx-auto px-6 pt-12 pb-20">
    <!-- Hero image -->
    <div class="w-full mb-16">
      <img
        src="/images/about-hero.jpg"
        alt="Jingxi Guo"
        class="w-full h-auto object-cover"
      />
    </div>

    <!-- Bio -->
    <div class="text-center mb-16">
      <p class="text-lg md:text-xl font-light leading-relaxed">
        Jingxi Guo is a sound artist, sound engineer, and creative technologist.
      </p>
    </div>

    <!-- Education -->
    <div class="text-center space-y-8 text-sm md:text-base font-light tracking-wide">
      <div>
        <p>Graduate from Beijing Film Academy</p>
        <p class="text-accent">Bachelor Degree in Sound Art — 2019</p>
      </div>
      <div>
        <p>Graduate from Tisch School of the Arts at NYU</p>
        <p class="text-accent">Master Degree in ITP — 2023</p>
      </div>
    </div>
  </section>
</Layout>
