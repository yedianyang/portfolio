---
import Layout from '@/layouts/Layout.astro';
import { t } from '@/i18n';

const locale = 'en';
---

<Layout locale={locale} title={t(locale, 'about.title')}>
  <section class="max-w-3xl mx-auto px-6 pt-16 pb-20">
    <h1 class="text-3xl md:text-4xl font-light tracking-tight mb-8">
      {t(locale, 'about.title')}
    </h1>

    <div class="prose prose-gray max-w-none">
      <p class="text-lg leading-relaxed">
        {t(locale, 'about.bio')}
      </p>

      <h2 class="text-xl font-medium mt-12 mb-6">{t(locale, 'about.education')}</h2>

      <div class="space-y-4">
        <div>
          <h3 class="font-medium">{t(locale, 'about.bfa')}</h3>
          <p class="text-accent">{t(locale, 'about.bfaDegree')}</p>
        </div>
        <div>
          <h3 class="font-medium">{t(locale, 'about.mfa')}</h3>
          <p class="text-accent">{t(locale, 'about.mfaDegree')}</p>
        </div>
      </div>
    </div>

    <!-- Resume download placeholder -->
    <!--
    <div class="mt-12">
      <a
        href="/resume.pdf"
        class="inline-flex items-center gap-2 text-sm border border-gray-200 px-4 py-2 rounded hover:bg-gray-50 transition-colors"
        download
      >
        Download CV (PDF)
      </a>
    </div>
    -->
  </section>
</Layout>
